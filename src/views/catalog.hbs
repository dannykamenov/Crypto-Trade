<main>
  <section class="crypto-market">
    <h1><span>Crypto</span> Trade</h1>
    {{#if cryptos}}
    <div class="offer-list">
      {{#each cryptos}}
      <div class="coin">
        <div class="coin-img">
          <img src="{{this.imageUrl}}" />
        </div>
        <div class="coin-info">
          <h1>{{this.name}}</h1>
          <p><span>Price: </span>${{this.price}}</p>
          <p><span>Payment: </span>{{this.paymentMethod}}</p>
        </div>

        <a href="/crypto/{{this._id}}/details" class="btn-details">Details</a>
      </div>
      {{/each}}
    {{else}}
    <div class="no-offer">
      <p>There are no crypto offers found!</p>
    </div>
    {{/if}}
  </section>
</main>